<div class="container">
 <h4 class="col-4 bg-light text-center"><%= @user.name %>さんの会員情報編集</h4>
  <div class="row">
    <%= form_with model: @user, url: admin_user_path, method: :patch, local:true do |f| %>
    <table class="table table-borderless">
     <tr>
      <td><%= f.label :id,"ユーザーID" %></td>
      <td><%= @user.id %></td>
     </tr>
     <tr>
       <td><%= f.label :"氏名" %></td>
       <td><%= f.text_field :name, required: true, class: "form-control" %></td>
     </tr>
     <tr>
       <td><%= f.label :"メールアドレス" %></td>
       <td><%= f.text_field :email,required: true, class: "form-control" %></td>
     </tr>
     <tr>
       <td><%= f.label :"会員ステータス" %></td>
       <td class="form-inline">
          　<%= f.radio_button :is_deleted, false %>
          　<%= f.label :is_deleted, "有効" %>
          　<%= f.radio_button :is_deleted, true %>
          　<%= f.label :is_deleted, "退会" %>
       </td>
     </tr>
     <tr>
      <td></td>
      <td><%= f.submit"変更を保存", class: 'btn btn-success btn-lg' %></td>
     </tr>

    </table>
    <% end %>
  </div>
</div>