<div class='container'>
  <h4 class="col-4 bg-light text-center"><%= @user.name %>さんの会員詳細</h4>
  <div class='row'>
   <table class ="table table-borderless">
      <tr>
        <td>会員ID</td><td><%= @user.id %></td>
      </tr>
      <tr>
        <td>画像</td><td><%= image_tag @user.get_image(50, 50) %></td>
      </tr>
      <tr>
        <td>氏名</td><td><%= @user.name %></td>
      </tr>
      <tr>
        <td>メールアドレス</td><td><%= @user.email %></td>
      </tr>
      <tr>
        <td>ユーザーステータス</td>
        <td>
          <% if @user.active_for_authentication? %>
            <p class="text-success font-weight-bold">有効</p>
          <% else %>
            <p class="text-secondary font-weight-bold">退会</p>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td>
          <%= link_to "編集する",edit_admin_user_path,class: 'btn btn-success mr-5' %>
          <!--%= link_to "注文履歴一覧を見る", admin_order_path,class: "btn btn-primary ml-5" %-->
        </td>
      </tr>
    </table>
  </div>
</div>