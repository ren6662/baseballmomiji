<div class='container'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
		<h2 class="text-center mt-5">投稿編集</h2>
		<%= form_with model: @post, url: user_post_path, method: :patch, local:true do |f| %>
		<%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control post_title' %>
      </div>
      <div class="form-group">
        <%= f.label :opinion %>
        <%= f.text_area :body, class: 'form-control post_body' %>
      </div>
      <div class="field">
        <%= f.label :tag %><br />
        <%= f.text_field :tag, class: 'form-control',placeholder: "タグを複数つけるには' , 'で区切ってください" %>
      </div>
      <div class="field">
        <%= f.label :image %><br />
        <%= f.file_field :image, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "編集",class: 'btn btn-success mt-3' %>
      </div>
    <% end %>

		<%= link_to 'Show', user_post_path(@post.id) %> |
		<%= link_to 'Back', user_posts_path, class: "back" %>
  </div>
</div>