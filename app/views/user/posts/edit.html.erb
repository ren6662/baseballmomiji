<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>投稿編集</h1>
  		<!-- updateできない -->
  		<%= form_with model: @post, url: user_post_path, method: :patch, local:true do |f| %>
         <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control post_title' %>
         </div>
         <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: 'form-control post_body' %>
         </div>
         <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
         </div>
        <% end %>
  		<!-- showページに遷移に修正 -->
  		<%= link_to 'Show', user_post_path(@post.id) %> |
  		<%= link_to 'Back', user_posts_path, class: "back" %>
  	</div>
  </div>
</div>