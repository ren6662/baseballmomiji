<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Post detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= image_tag @post.get_image(100, 100) %><br>
            <%= @post.user.name %>
          </td>
          <td><%= @post.title %></td>
          <td><%= @post.body %></td>
          <td id="favorite_buttons_<%= @post.id %>"><%= render "user/favorites/favorite-btn", post: @post %></td>
          <td>コメント数: <%= @post.comments.count %></td>
          <td><% if @post.user == current_user %>
                <%= link_to 'Edit', edit_user_post_path(@post), class: "btn btn-sm btn-success" %>
                <% end %>
          </td>
          <td><% if @post.user == current_user %>
                 <%= link_to 'Destroy', user_post_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
                 <% end %>
          </td>
        </tr>
      </table>
      <div id="comments_area">
         <%= render "user/comments/index", post: @post %>
      </div>
      <div id="comments_area">
         <%= render "user/comments/form", post: @post, comment: @comment %>
      </div>
      
  	</div>
  </div>
</div>