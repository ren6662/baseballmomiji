<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="mt-5">プロフィールを編集</h2>
    <%= form_with model: @user, url: user_user_path, method: :patch, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "保存", class: 'btn btn-secondary' %>
      </div>
    <% end %>
      <div><%= link_to "退会する", user_user_unsubscribe_path(@user), class: "btn btn-danger" %></div>
  </div>
</div>