<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10'>
      <table class='table'>
        <tr>
          <th>image</th>
          <th><%= image_tag @user.get_image(100, 100) %></th>
        </tr>
        <tr>
      	  <th>name</th>
      	  <th><%= @user.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @user.introduction %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th><%= link_to @user.followings.count, user_user_followings_path(@user) %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to @user.followers.count, user_user_followers_path(@user) %></th>
        </tr>
      </table>

    <div class='row'>
      <% if current_user != @user %>
        <td><%= render "user/relationships/btn", user: @user %></td>
      <% else %>
      <%= link_to edit_user_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      <% end %>
   </div>
  </div>
  <div class="col-md-2">
    <% unless @user.id == current_user.id %>
     <% if @is_room == true %>
       <%= link_to "ダイレクトメッセージ", user_room_path(@room_id) %>
     <% else %>
       <%= form_with model: @room, url: user_rooms_path, local: true do |f|%>
         <%= fields_for @entry do |r| %>
           <%= r.hidden_field :user_id, value: @user.id %>
       <% end %>
        <%= f.submit "チャットを始める" %>
         <% end %>
     <% end %>
    <% end %>
  </div>
</div>