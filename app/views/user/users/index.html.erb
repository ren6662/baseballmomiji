<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h2 class="mt-5">ユーザー</h2>
  　   <table class='table'>
        <thead>
          <tr>
            <th>プロフ画像</th>
            <th>名前</th>
            <th></th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td>フォロー数:<%= user.followings.count %></td>
              <td>フォロワー数:<%= user.followers.count %></td>
              <td><%= render "user/relationships/follow", user: user %></td>
              <td><%= link_to 'Show', user_user_path(user.id), class: "user_#{user.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class=" d-flex mb-3 justify-content-center">
      <%= paginate @users %>
      </div>
    </div>
  </div>
</div>