<% if current_user != user%>
<% if current_user.following?(user) %>
  <%= link_to "フォロー外す", user_user_relationships_path(user.id), method: :delete, class: "btn btn-outline-danger" %>
<% else %>
  <%= link_to "フォローする", user_user_relationships_path(user.id), method: :post, class: "btn btn-outline-info" %>
<% end %>
<% end %>